<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登录</title>
    <style>
        .page {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: #324157;
            color: #fff;
            text-align: center;
        }
        .container {
            margin-top: 10%;
        }
        .logo {
            padding: 20px 0 20px 5px;
            text-align: center;
        }
        .logo h2 {
            color: #fff;
            font-size: 20px;
            font-weight: normal;
            display: inline-block;
            margin: 0;
        }
        .login-box {
            width: 320px;
            max-width: 320px;
            margin-left: auto;
            margin-right: auto;
            position: relative;
        }
        .form-control {
            display: block;
            width: 100%;
            box-sizing: border-box;
            height: 40px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }
        input {
            margin-bottom: 25px;
        }
        .btn {
            display: block;
            width: 100%;
            height: 40px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            background-color: #5cb85c;
            border-radius: 4px;
            border: none;
            color: #fff;
            cursor: pointer;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="login-box">
        <form action="">
            <input type="text" id="username" placeholder="账 号" required="required" class="form-control">
            <input type="password" id="password" placeholder="密 码" required="required" class="form-control">
            <button class="btn" id="login">登 录</button>
        </form>
    </div>
</div>

<script src="//static-cdn.ticwear.com/library/jquery-3.1.0/jquery-3.1.0.min.js"></script>
<script>
    $('#login').on('click', function (e) {
        e.preventDefault();
        var username = $('#username').val();
        var password = $('#password').val();

        if ($.trim(username) === '' || $.trim(password) === '') {
            alert('数据不完整');
            return;
        }
        let url = '/login';
        var body = {
            username: username,
            password: password
        };
        $.ajax({
            url: url,
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(body),
            success: function (response) {
                if (response.err_code === 0) {
                    location.href = '/space/admin/posts-list';
                } else {
                    alert(response.err_msg);
                }
            }
        })
    })
</script>
</body>
</html>