<!DOCTYPE html>
<html lang="cn">
<head>
    <meta charset="UTF-8">
    <meta name="keywords" content="space, blog, 前端,<%= blog.title %>">
    <meta name="description" content="<%= blog.abstract %>">
    <meta name="author" content="yimin,2316114920@qq.com">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <title><%= blog.title %></title>
    <link rel="stylesheet" href="/css/index.css">
    <% include ./layout/ga %>
</head>
<body class="pg-index">
<div id="app">
    <div class="space-index-layout">
        <% include ./layout/header %>
        <div class="space-container">
            <div class="space-main">
                <div class="main-content">
                    <div class="main-content-left">
                        <div class="article-detail">
                            <div class="article-header">
                                <h1 class="article-title"><%= blog.title %></h1>
                                <div class="bottom">
                                    <img src="/img/calandar.png" alt="" class="handle-icon"> <span class="value"><%= blog.createdAt %></span>
                                    <div class="line ivu-divider ivu-divider-vertical"><!----></div>
                                    <img src="/img/tag.png" class="handle-icon"> <span class="value">
                                        <% blog.tags.forEach(function (tag) { %>
                                            <%= tag %>
                                        <% }) %>
                                    </span>
                                    <div class="line ivu-divider ivu-divider-vertical"><!----></div>
                                    <img src="/img/read-num.png" alt="" class="handle-icon"> <span class="value">
                                        <%= blog.visited %>
                                    </span></div>
                            </div>
                            <div class="article-content">
                                <%- blog.markdown %>
                            </div>
                        </div>
                    </div>
                    <div class="main-content-right">
                        <% include ./layout/hot %>
                    </div>
                </div>
            </div>
        </div>
        <% include ./layout/footer.ejs %>
    </div>
</div>
<script type="text/javascript" src="/js/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="/js/search.js"></script>
</body>
</html>
