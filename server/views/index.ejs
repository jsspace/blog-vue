<!DOCTYPE html>
<html lang="cn">
<head>
    <meta charset="UTF-8">
    <meta name="keywords" content="space, blog, 前端">
    <meta name="description" content="space博客">
    <meta name="author" content="yimin,2316114920@qq.com">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <title>space blog</title>
    <link rel="stylesheet" href="/css/index.css">
    <% include ./layout/ga.ejs %>
</head>
<body class="pg-index">
<div id="app">
    <div class="space-index-layout">
        <% include ./layout/header %>
        <div class="space-container">
            <div class="space-main">
                <div class="main-content">
                    <div class="main-content-left">
                        <ul class="article-list">
                            <% posts.forEach(function (post) { %>
                                <li class="article-item">
                                    <a class="space-article-item" href="<%= '/post/' + post.url %>">
                                        <div class="space-article-content">
                                            <div class="middle"><p class="middle-title"><%= post.title %></p> <!---->
                                            </div>
                                            <div class="article-excerpt">
                                                <%= post.abstract %>
                                            </div>
                                            <div class="bottom">
                                                <img src="/img/calandar.png" alt=""
                                                     class="handle-icon">
                                                <span class="value"><%= post.createdAt %></span>
                                                <div class="line ivu-divider ivu-divider-vertical"><!----></div>
                                                <img src="/img/tag.png"
                                                     class="handle-icon"> <span class="value">
                                                    <% post.tags.forEach(function (tag) { %>
                                                        <%= tag %>
                                                    <% }) %>
                                                </span>
                                                <div class="line ivu-divider ivu-divider-vertical"><!----></div>
                                                <img src="/img/read-num.png"
                                                     alt="" class="handle-icon"> <span class="value"><%= post.visited %></span></div>
                                            <div><!----> <!----></div>
                                        </div> <!----></a>
                                </li>
                            <% }); %>

                            <div class="show-loading" style="display: none;">
                                <div class="ivu-spin ivu-spin-default ivu-spin-show-text">
                                    <div class="ivu-spin-main"><span class="ivu-spin-dot"></span>
                                        <div class="ivu-spin-text">
                                            <i class="demo-spin-icon-load ivu-icon ivu-icon-ios-loading"
                                               style="font-size: 18px;"></i></div>
                                    </div>
                                </div>
                                <span class="text">加载中...</span></div>
                        </ul>
                    </div>
                    <div class="main-content-right">
                        <% include ./layout/hot %>
                    </div>
                </div>
            </div>
        </div>
        <% include ./layout/footer.ejs %>
    </div>
</div>

<script type="text/javascript" src="/js/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>
